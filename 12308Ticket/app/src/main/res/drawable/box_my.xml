<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list android:shape="rectangle">

            <!-- 框颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/c_e6e6e6" />
                </shape>
                
                </item>
            <!-- 主体背景颜色值 -->
            <item android:bottom="1px" android:top="1px"><shape>
                    <solid android:color="@color/c_ebf3fb" />

                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
                
                </item>
        </layer-list></item>
    <item android:state_pressed="false"><layer-list android:shape="rectangle">

            <!-- 框颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/c_e6e6e6" />
                </shape>
                
                </item>
            <!-- 主体背景颜色值 -->
            <item android:bottom="1px" android:top="1px"><shape>
                    <solid android:color="@color/white" />

                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
                
                </item>
        </layer-list></item>

</selector>