<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:background="@drawable/shape_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/booking_change_failure_top"
        android:layout_marginTop="@dimen/booking_change_failure_top"
        android:gravity="center"
        android:text="改签申请失败"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/booking_change_failure_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_change_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="cmacmasdmkcmaskcmxcmxmcmxmcmxkl"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/booking_ticket_failure_size" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_change"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="放弃改签"
            android:textColor="@color/c_f03f3f"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/c_dddddd" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="重选车次"
            android:textColor="@color/c_f03f3f"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        style="@style/split_line"
        android:layout_above="@id/ll_bottom" />
</LinearLayout>