<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_begin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxWidth="100dp"
            android:minWidth="100dp"
            android:text="深圳南山客运站"
            android:singleLine="true"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/bus_book_begin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="11:00"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/bus_book_begin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_end_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:minWidth="100dp"
            android:text="昆明"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/bus_book_begin"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:drawableLeft="@mipmap/split_line"
            android:drawableRight="@mipmap/split_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_begin_station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:text="汽车站"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/bus_book_end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="出发"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/bus_book_end" />

        <TextView
            android:id="@+id/tv_end_station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:text="昆明客运站"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/bus_book_end" />
    </TableRow>
</TableLayout>