<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20px"
        android:background="@color/c_f0f0f0"/>

    <TextView
        android:id="@+id/tv_itemchildinfo_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_20px"
        android:paddingTop="@dimen/margin_20px"
        android:text="第1位儿童"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/textsize_30px"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10px"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_childindurance_name"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:hint="填写姓名"
                android:inputType="text"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/textsize_36px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/bg_child_down"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_childinsurance_gender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_80px"
            android:layout_marginBottom="@dimen/margin_10px"
            android:drawablePadding="@dimen/margin_20px"
            android:drawableRight="@drawable/slt_child_show_desc"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_20px"
            android:paddingRight="@dimen/margin_20px"
            android:text="男孩"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/textsize_30px"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_childinsurace_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/margin_20px"
                android:drawableRight="@mipmap/icon_downarrow_blue"
                android:gravity="center_vertical"
                android:hint="选择出生日期"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_36px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/bg_child_down"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>