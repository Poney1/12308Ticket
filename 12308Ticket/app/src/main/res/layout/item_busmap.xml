<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_busmap_icon"
            android:layout_width="@dimen/margin_100px"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_start"/>

        <TextView
            android:id="@+id/tv_busmap_staionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="广州流花车站"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/textsize_28px"/>

        <TextView
            android:id="@+id/tv_busmap_staionstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20px"
            android:text="尚未发车"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_26px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2px"
        android:layout_marginLeft="@dimen/margin_100px"
        android:background="@color/line_color"/>

</LinearLayout>