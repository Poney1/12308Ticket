<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/title_bar_common" />

    <include layout="@layout/layout_loading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="12306账号"
        android:textColor="@color/c_666666"
        android:textSize="12sp" />

    <include layout="@layout/common_line" />

    <LinearLayout
        android:id="@+id/ll_trainaaccount_change"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_trainaccount_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hui13123@126.com"
            android:textColor="@color/c_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_trainaccount_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20px"
            android:textColor="@color/c_f03f3f"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_line" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dddddd" />

    <TextView
        android:id="@+id/tv_trainaccount_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出账号"
        android:textColor="@color/c_333333"
        android:textSize="15dp" />
</LinearLayout>