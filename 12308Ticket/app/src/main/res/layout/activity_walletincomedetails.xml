<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/c_f0f0f0"
              android:orientation="vertical">

    <include layout="@layout/title_bar_common"/>

    <include layout="@layout/common_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20px"
        android:background="@drawable/bg_cornor_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_20px"
        android:paddingRight="@dimen/margin_20px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="流水号"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_incomeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="类型"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收入"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_incomemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付方式"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_incomeway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="余额"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/textsize_30px"/>

            <TextView
                android:id="@+id/tv_incomedetails_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_30px"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>