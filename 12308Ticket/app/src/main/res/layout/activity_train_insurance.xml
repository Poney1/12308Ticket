<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/title_bar_common" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_insurance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null" />



        <Button
            android:id="@+id/btn_insurance_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_color_orange"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="@string/train_ins"
            android:textColor="@drawable/pay_enable_text_color"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20px"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2px"
                android:background="@color/c_dddddd" />

            <Button
                android:id="@+id/btn_insurance_noconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_my_item_click"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:text="@string/train_no_ins"
                android:textColor="@color/c_666666"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2px"
                android:background="@color/c_dddddd" />

        </LinearLayout>


</LinearLayout>