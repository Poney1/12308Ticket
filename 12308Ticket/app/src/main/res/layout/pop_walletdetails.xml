<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_walletdetails_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_orderlist_choosetype"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/c_333333"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/cb_walletdetails_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_orderlist_choosetype"
            android:button="@null"
            android:gravity="center"
            android:text="收入"
            android:textColor="@color/c_333333"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/cb_walletdetails_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/margin_40px"
            android:layout_weight="1"
            android:background="@drawable/cb_orderlist_choosetype"
            android:button="@null"
            android:gravity="center"
            android:text="支出"
            android:textColor="@color/c_333333"
            android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_walletdetails_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></RelativeLayout>

</LinearLayout>