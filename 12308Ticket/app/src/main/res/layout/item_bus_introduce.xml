<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ebebeb"
    android:orientation="vertical"
    android:paddingBottom="7dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingRight="@dimen/bus_list_introduce_top">

    <ImageView
        android:id="@+id/img_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bus_list_introduce" />

    <ImageView
        android:id="@+id/img_bus_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="36dp"
        android:background="@mipmap/bus_introduce_city_line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="@dimen/bus_list_introduce_top"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bus_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="城际约租车"
            android:textColor="@color/c_333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bus_type_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="6dp"
            android:text="方便又快捷"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="￥"
        android:textColor="@color/app_style"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bus_type_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="70.5"
        android:textColor="@color/app_style"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:text="起"
        android:textColor="@color/c_999999"
        android:textSize="12sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>