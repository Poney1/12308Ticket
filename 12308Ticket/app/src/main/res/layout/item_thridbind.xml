<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_thridbind_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/qq_login_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_thridbind_name"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/textsize_32px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QQ"/>

            <Button
                android:id="@+id/bt_thridbind_isbind"
                android:textSize="@dimen/margin_26px"
                android:layout_width="@dimen/margin_160px"
                android:layout_height="@dimen/margin_60px"
                android:background="@drawable/btn_rt"
                android:textColor="@drawable/slt_car_text"
                android:text="绑定"/>

        </LinearLayout>

        <include layout="@layout/common_line"/>

    </LinearLayout>

</LinearLayout>