<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退款"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/textsize_30px"/>

        <TextView
            android:id="@+id/tv_itemrefund_totalmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-¥60"
            android:textColor="@color/c_f03f3f"
            android:textSize="@dimen/textsize_36px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_34px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemrefund_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2016年3月30日22时37分"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款状态"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/textsize_24px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款单号："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_refundid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乘客："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_ticketname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应退："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_ticketmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保单编号："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_insuranceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20px"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被保险人："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_insurancename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应退："
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

        <TextView
            android:id="@+id/tv_itemrefund_insurancemoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7084823"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textsize_24px"/>

    </LinearLayout>


</LinearLayout>