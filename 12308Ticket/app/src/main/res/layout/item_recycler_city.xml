<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ecf1f2"
        android:paddingBottom="@dimen/city_select_abc_top"
        android:paddingLeft="@dimen/city_select_abc_left"
        android:paddingTop="@dimen/city_select_abc_top"
        android:text="A"
        android:textColor="@color/c_323232"
        android:textSize="@dimen/city_select_abc_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_show_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/city_select_abc_top"
        android:paddingLeft="@dimen/city_select_city_left"
        android:paddingTop="@dimen/city_select_abc_top"
        android:text="北京"
        android:textColor="@drawable/slt_city_text"
        android:textSize="@dimen/city_select_abc_size"
        android:visibility="visible" />

    <ImageView
        style="@style/split_line" />
</LinearLayout>