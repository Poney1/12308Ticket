<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200px"
        android:background="@drawable/coupon_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:minEms="1"
                    android:text="125"
                    android:textColor="@color/app_style"
                    android:textSize="36sp"/>

                <TextView
                    android:id="@+id/tv_coupon_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/app_style"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_coupon_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="8dp"
                android:text="满100可用"
                android:textColor="@color/app_style"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城际券"
                    android:textColor="#333333"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon_betime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-10-10"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_coupon_entime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至2016-10-10"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台： "
                    android:textColor="@color/c_999999"/>

                <TextView
                    android:id="@+id/tv_coupon_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="app"
                    android:textColor="@color/c_333333"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupon_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxEms="1"
            android:text="可使用"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>