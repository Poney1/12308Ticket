<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_itempassenger_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_fillinorder_delete_selector" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="18dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itempassenger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李大权"
                android:textColor="@color/c_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_itempassenger_tickettype"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/bg_traindeails_tickettype"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itempassenger_identitype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证:"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_itempassenger_identinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="430621199200000000"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_itempassenger_addchildticket"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/icon_fillinorder_addchild"
        android:drawablePadding="7dp"
        android:text="添加儿童票"
        android:textColor="#17A8EB"
        android:textSize="15sp" />

</LinearLayout>