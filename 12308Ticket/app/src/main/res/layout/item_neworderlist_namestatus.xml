<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108dp"
    android:layout_height="18dp"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/bg_orderlist_graycornor"
        android:layout_marginBottom="@dimen/margin_20px"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="108dp"
        android:layout_height="18dp">

        <TextView
            android:id="@+id/tv_gridview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诸葛南阳"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/textsize_22px" />

        <TextView
            android:id="@+id/tv_gridview_ticketstatus"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(已出票)"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/textsize_22px" />
    </LinearLayout>

</LinearLayout>