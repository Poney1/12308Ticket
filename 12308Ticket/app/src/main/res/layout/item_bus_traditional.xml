<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ebebeb"
    android:orientation="vertical"
    android:paddingBottom="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="11dp">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bus_list_introduce_top"
            android:gravity="center"
            android:text="07:00"
            android:textColor="@color/c_333333"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/bus_list_tradition_top"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_start_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/bus_item_start"
                android:drawablePadding="7dp"
                android:lines="1"
                android:text="宝安客运中心"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/bus_list_tradition_name_size" />

            <TextView
                android:id="@+id/tv_end_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bus_list_tradition_top"
                android:drawableLeft="@mipmap/bus_item_end"
                android:drawablePadding="7dp"
                android:lines="1"
                android:text="广州天河客运站"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/bus_list_tradition_name_size" />

            <TextView
                android:id="@+id/tv_bus_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bus_list_tradition_top"
                android:drawableLeft="@mipmap/bus_item_seat"
                android:drawablePadding="7dp"
                android:text="大型高一"
                android:textColor="@color/c_999999"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/bus_list_tradition_top"
            android:paddingTop="@dimen/bus_list_tradition_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ticket_price_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥70.5"
                    android:textColor="@color/c_999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="￥"
                    android:textColor="@color/app_style"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bus_type_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="70.5"
                    android:textColor="@color/app_style"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="起"
                    android:textColor="@color/c_999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_have_ticket"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/bus_list_tradition_top"
                android:layout_weight="1"
                android:gravity="right"
                android:text="有票"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/bus_list_tradition_ticket_count" />

            <TextView
                android:id="@+id/tv_run_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/bus_list_tradition_top"
                android:layout_weight="1"
                android:gravity="right"
                android:text="约三小时"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/bus_list_tradition_ticket_count" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>