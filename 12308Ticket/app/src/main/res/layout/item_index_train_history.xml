<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/index_space"/>

        <TextView
            android:id="@+id/tv_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/img_history"
            android:text="深圳"
            android:textColor="@drawable/slt_999_f03f3f"
            android:textSize="@dimen/frag_index_history_size"/>

        <TextView
            android:id="@+id/tv_item_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_history"
            android:text="深圳"
            android:textColor="@drawable/slt_999_f03f3f"
            android:textSize="@dimen/frag_index_history_size"/>

    </RelativeLayout>

</RelativeLayout>