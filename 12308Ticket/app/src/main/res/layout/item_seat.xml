<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_soft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/train_list_item_seat_top"
        android:gravity="top"
        android:text="高级软卧: "
        android:textColor="@color/c_666666"
        android:textSize="@dimen/train_list_item_seat_size"/>

    <TextView
        android:id="@+id/tv_soft_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_10px"
        android:text="价格"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/train_list_item_seat_size"/>

</LinearLayout>