<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_trainlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/title_bar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@mipmap/icon_user" />

        <com.wxws.myticket.my.widgets.view.ClearEditText
            android:id="@+id/cet_trainlogin_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="用户/邮箱/手机号"
            android:padding="3dp"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        layout="@layout/common_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@mipmap/icon_password" />

        <com.wxws.myticket.my.widgets.view.ClearEditText
            android:id="@+id/cet_trainlogin_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="3dp"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_trainlogin_isvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:button="@drawable/cb_show_psw"
            android:textColor="@color/c_cccccc"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="15dp">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/checkbox"
            android:drawablePadding="2dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="0dp"
            android:text="@string/login_self"
            android:textColor="@color/c_666666"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_trainlogin_login"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_red_new"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <CheckBox
            android:id="@+id/cb_trainlogin_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/btn_checkbox_small"
            android:checked="true"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="已阅读并同意"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_trainlogin_protocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="《12306托管代购协议》"
            android:textColor="@color/c_f03f3f"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>