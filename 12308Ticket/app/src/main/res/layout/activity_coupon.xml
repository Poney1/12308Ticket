<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/c_f0f0f0"
              android:orientation="vertical">

    <include layout="@layout/title_bar_common"/>

    <RadioGroup
        android:id="@+id/rg_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_coupon_eff"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_orderlist_rorh"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="可用券"
            android:textColor="@drawable/text_trainlist_color"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/c_f0f0f0"/>

        <RadioButton
            android:id="@+id/rb_coupon_uneff"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="失效券"
            android:textColor="@drawable/text_trainlist_color"
            android:textSize="15sp"/>
    </RadioGroup>

    <FrameLayout
        android:padding="@dimen/margin_20px"
        android:id="@+id/fl_coupon_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/common_line"/>

    <LinearLayout
        android:id="@+id/ll_coupon_rules"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_80px"
            android:background="@color/c_f0f0f0"
            android:drawablePadding="@dimen/margin_20px"
            android:drawableRight="@mipmap/ic_into"
            android:gravity="center"
            android:text="优惠券使用规则"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/textsize_30px"/>
    </LinearLayout>

</LinearLayout>