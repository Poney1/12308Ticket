<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_av"
            android:layout_width="290dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_white">

            <com.wxws.myticket.common.widgets.view.RoundedImageView
                android:id="@+id/img_ret_url"
                android:layout_width="290dp"
                android:layout_height="400dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_know"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ticket_av_top"
                    android:paddingTop="@dimen/ticket_av_top"
                    android:text="@string/ticket_know"
                    android:textColor="@drawable/slt_red_packet" />

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/c_999999" />

                <TextView
                    android:id="@+id/tv_never_know"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ticket_av_top"
                    android:paddingTop="@dimen/ticket_av_top"
                    android:text="@string/ticket_never_know"
                    android:textColor="@drawable/slt_red_packet" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_url_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_av"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@mipmap/index_img_cancel" />
    </RelativeLayout>

</RelativeLayout>