<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_20px"
              android:paddingRight="@dimen/margin_20px"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="设置页面"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/textsize_30px"/>

    <TextView
        android:id="@+id/tv_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_into"
        android:text="123456"
        android:drawablePadding="@dimen/margin_20px"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/textsize_20px"/>


</LinearLayout>