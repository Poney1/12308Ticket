<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/other_login"
            android:textColor="#666666"
            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#666666" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_qq_login"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="#666666"
            android:layout_marginLeft="18dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_weixin_login"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textColor="#666666"
            android:textSize="12sp" />
        <Button
            android:id="@+id/bt_login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_weibo_login"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textColor="#666666"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>