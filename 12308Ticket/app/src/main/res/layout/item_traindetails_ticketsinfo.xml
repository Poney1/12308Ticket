<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_itemorderdetails_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李大权"
            android:textColor="@color/c_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_itemorderdetails_tickettype"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_traindeails_tickettype"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="成人票"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_itemorderdetails_seattype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="硬座"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_itemorderdetails_seatprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="¥ 50"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_itemorderdetails_identino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4306211992****5022"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_itemorderdetails_seatinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01车厢01号"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemorderdetails_ticketstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已出票"
            android:textColor="@color/c_f03f3f"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_itemtraindetails_refund"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_bt_refund"
            android:gravity="center"
            android:text="退票"
            android:textColor="@drawable/selector_text_refund"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_itemtraindetails_endorse"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/selector_bt_endorse"
            android:gravity="center"
            android:text="改签"
            android:textColor="@drawable/selector_text_endorse"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>